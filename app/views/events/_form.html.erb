<%= simple_form_for [@trip, @event] do |f| %>
  <%= f.input :name %>
  <%= f.input :event_type, collection: Event::EVENT_TYPES %>
  <div class="row">
    <div class="col">
      <%= f.input :start_date, as: :string,
                  wrapper_html: { class: "mb-4" },
                  label_html: { class: "form-label text-secondary fw-bold" },
                  input_html: { data: { controller: "flatpickr" } } %>
    </div>
    <div class="col">
      <%= f.input :end_date, as: :string,
                  wrapper_html: { class: "mb-4" },
                  label_html: { class: "form-label text-secondary fw-bold" },
                  input_html: { data: { controller: "flatpickr" } } %>
    </div>
  </div>
  <%= f.input :start_location,
  input_html: {data: {address_autocomplete_target: "address"}},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :end_location,
  input_html: {data: {address_autocomplete_target: "address"}},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.submit %>
<% end %>
